{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node",
    // We target a minimum Node version of 14: https://stackoverflow.com/a/59787575
    "target": "es2020",
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*"
  ],
}